.root
  .container
    +title-main
      | #{$t.unisex_landing.gallery_title} 
      strong #{$t.unisex_landing.gallery_titleBold}
    .hidden-xs-down
      .filter
        |
        |
        button.btn.waves-effect.selected(data-filter="all") All
        |
        |
        button.btn.waves-effect(data-filter="cat1") Category 1
        |
        |
        button.btn.waves-effect(data-filter="cat2") Category 2
        |
        |
        button.btn.waves-effect(data-filter="cat3") Category 3
        |
        |
        button.btn.waves-effect(data-filter="cat4") Category 4
        |
        |
        button.btn.waves-effect(data-filter="cat5") Category 5
        |
        |
    .hidden-xs-down
      .massonry#image_gallery
        each item, index in portfolio
          .item.loaded(data-category=item.category style="transition-duration:" + index / 8 + "s")
            .wow.fadeInUpShort(data-wow-offset='100' data-wow-delay='0.2s' data-wow-duration='0.3s')
              +image-thumb(item.img, item.title, item.link, item.size)
      p#no_data.overline.text-center.hide #{$t.unisex_landing.gallery_nodata}
    .hidden-sm-up
      .slick-carousel#gallery_carousel
        each item in portfolio
          .item-carousel(data-category=item.category)
            +image-thumb(item.img, item.title, item.link, item.size)
